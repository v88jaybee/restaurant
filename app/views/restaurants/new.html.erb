<h3>Register a restaurant</h3>

<div>
	<% if flash[:errors] %>
		<% flash[:errors].each do |e| %>
			<p><%= e %></p>
		<% end %>
	<% end %>
			
	<form action="/submit_restaurant" method="post">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

		<p>
			<label for="restaurant_name">Restaurant Name:</label>
			<input type="text" name="restaurant[name]" id="restaurant_name" value="<%= @restaurant.name %>">
			
		</p>
		<p>
			<label for="restaurant_name">Cuisine:</label>
			<input type="text" name="restaurant[cuisine_type]" id="restaurant_name" value="<%= @restaurant.cuisine_type %>">
		</p>
		
		<input type="submit" value="Cancel" name="process_type" />
		<input type="submit" value="Register" name="process_type" />
	</form>
</div>