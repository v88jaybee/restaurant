<h3> Review for <%= @restaurant.name %> </h3>

<%= link_to "New Review", { :controller => 'restaurants', :action => 'new_review', id: @restaurant.id }, {class: 'btn btn-info', method: :get} %>

<table class="table table-hover">
	<thead>
		<th>Customer</th>
		<th>Stars</th>
		<th>Description</th>
	</thead>
	<tbody>
		<% if @restaurant_reviews.present? %>
			<% @restaurant_reviews.each do |review| %>
				<tr>
					<td><%= review.customer_name.capitalize! %></td>
					<td><%= review.star_level %></td>
					<td><%= review.description %></td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>